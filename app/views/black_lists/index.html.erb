<div class="panel panel-default">
  <div class="panel-heading">Listagem de Motorias na Lista Negra</div>
  <div class="panel-body">
    <%= link_to 'Nova Lista Negra', new_black_list_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table id="list_table_price" class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Fone</th>
            <th>Cpf</th>
            <th>Motivo</th>
            <th colspan="3">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @black_lists.each do |black_list| %>
            <tr>
              <td><%= link_to black_list.name, black_list %></td>
              <td><%= black_list.fone %></td>
              <td><%= black_list.cpf %></td>
              <td><%= black_list.motivo %></td>
              <td><%= link_to 'Edit', edit_black_list_path(black_list), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', black_list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
